@model ValenciaForm

@{
    ViewData["Title"] = "FormBinding";
}

<div class="container mt-5">

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Detalhes da Valencia</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Home" asp-action="FormBinding">
                        <div class="form-group mt-2">
                            <label asp-for="DescValencia">Nome:</label>
                            <input asp-for="DescValencia" class="form-control"  placeholder="Descrição" />
                            <span asp-validation-for="DescValencia" class="text-danger"></span>
                        </div>
                        <div class="form-group  mt-2">
                            <label asp-for="AbvValencia">Abrev:</label>
                            <input asp-for="AbvValencia" class="form-control"  placeholder="Abreviatura" />
                            <span asp-validation-for="AbvValencia" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


